entity Project
   :: add Event {
              moment : DateTime min(1) max(1) };
list()/#3/None
   :: substitute :: Event;

entity Issue/attribute comments {
	DeclType/name
   		:: substitute Event;
	name
   		:: substitute log;
};
entity Comment
   :: add IssueClose :: Event {
              actor - User min(0) max(1) };
entity Event
   :: add IssueReopen :: Event {
              actor - User min(0) max(1) };
              

